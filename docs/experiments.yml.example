instances:
  - repo: local
    subdir: large
    items:
      - random_500.list
      - partially_sorted_500.list
  - repo: local
    subdir: small
      - random_100.list
      - partially_sorted_100.list

instdir: "./instances"

experiments:
  - name: insertion-sort
    args: ['./sort.py', '--algo=insertion_sort', '@INSTANCE@']
    stdout: out
  - name: bubble-sort
    args: ['./sort.py', '--algo=bubble_sort', '@INSTANCE@']
    stdout: out
